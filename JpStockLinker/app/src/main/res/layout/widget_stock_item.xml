<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/bg_widget_item_default">

    <!-- 左側：銘柄コード -->
    <TextView
        android:id="@+id/widget_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3350"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/code_badge_text"
        android:background="@drawable/bg_code_badge"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"/>

    <!-- 中央：銘柄名 -->
    <TextView
        android:id="@+id/widget_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="メタプラネット"
        android:textSize="12sp"
        android:textColor="#212121"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"/>

    <!-- 右側：日付（横並び） -->
    <TextView
        android:id="@+id/widget_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/21"
        android:textSize="10sp"
        android:textColor="#757575"
        android:layout_marginStart="4dp"/>

    <!-- 右側：価格（横並び） -->
    <TextView
        android:id="@+id/widget_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥1,234"
        android:textSize="11sp"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:layout_marginStart="6dp"/>

</LinearLayout>
